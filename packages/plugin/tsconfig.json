{
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "include": ["src", "./package.json", "*.config.ts"],
  "exclude": ["node_modules", "dist", ".turbo"],
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "exactOptionalPropertyTypes": false
  }
}
