{
  "name": "@feelsgoodman/frogspawn",
  "version": "0.0.0",
  "description": "React component library",
  "repository": {
    "type": "git",
    "url": "https://github.com/spruceid/siwe.git",
    "directory": "packages/frogspawn"
  },
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "exports": {
    "./components": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin/index.d.ts",
      "default": "./dist/plugin/index.js"
    },
    "./context": {
      "types": "./dist/context/theme/index.d.ts",
      "default": "./dist/context/theme/index.js"
    },
    "./styles": "./dist/styles/index.css"
  },
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles/index.css",
    "build": "tsup --onSuccess 'pnpm run build:css'",
    "dev": "tsup --watch --onSuccess 'pnpm run build:css'",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint \"src/**/*.ts*\"",
    "test": "vitest",
    "lint:fix": "eslint \"src/**/*.ts*\" --fix"
  },
  "devDependencies": {
    "@feelsgoodman/eslint-config-custom": "workspace:*",
    "@feelsgoodman/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^20.4.5",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.15.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.29",
    "prettier": "^2.8.8",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "tailwindcss": "^3.3.3",
    "tsup": "^7.1.0",
    "vitest": "^0.33.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "typescript": ">=5.0.4"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0"
  }
}
