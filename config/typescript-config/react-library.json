{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["es2021", "dom"],
    "module": "esnext",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "target": "es2021",
    "types": ["node"]
  }
}
